<h1>Hello</h1>

<p> <%= link_to 'Create new movie', new_movie_path %> </p>

<% @movies.each do |movie| %>

    <h2> <%= movie.title %> </h2>
    <h3> <%= movie.director %> </h3>
    <h4> <%= movie.rating %> </h4>
    
    <p> <%= link_to 'View', movie_path(movie) %> </p>
    <p> <%= link_to 'Edit', edit_movie_path(movie) %> </p>
    <p> <%= link_to 'Delete', 
            movie_path(movie), 
            method: :delete,
            data:{ confirm: 'Are you sure you want to delete?'} %> </p>

    <% end %>

